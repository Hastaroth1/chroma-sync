<Window x:Class="AutoUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdater"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="600" WindowStartupLocation="CenterScreen" Background="#FF3C3C3C" BorderThickness="10,0,0,0" BorderBrush="{DynamicResource Pinks}" AllowsTransparency="True" WindowStyle="None">
    <Window.Resources>
        <SolidColorBrush x:Key="Pinks" Color="{DynamicResource Pink}"/>
    </Window.Resources>
    <Window.ContextMenu>
        <ContextMenu/>
    </Window.ContextMenu>
    <Grid Margin="10,10,10,0" Height="180" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="403*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" Margin="0" Source="Resources/android-chrome-192x192.png" Height="124" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Checking for updates..." Margin="10,129,10,0" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontFamily="Arial"/>

    </Grid>
</Window>
