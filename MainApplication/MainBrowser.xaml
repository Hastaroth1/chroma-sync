<Window x:Class="Ultrabox.ChromaSync.MainBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ultrabox.ChromaSync"
        mc:Ignorable="d"
        Title="Browser" Height="480" Width="720" MinWidth="640" MinHeight="480" WindowStartupLocation="CenterScreen" Icon="Resources/android-chrome-192x192.png" WindowStyle="ThreeDBorderWindow">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource ChromaSyncBlack}"/>
    </Window.Background>
    <Grid Margin="0">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="38"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="260"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <SolidColorBrush Color="{DynamicResource ChromaSyncTranslucent}"/>
                </Grid.Background>
                <DockPanel x:Name="DetailsView" Grid.Column="1" Margin="0"/>
                <DockPanel x:Name="ListView" Margin="0">
                    <DockPanel.Background>
                        <SolidColorBrush Color="{DynamicResource ChromaSyncTranslucent}"/>
                    </DockPanel.Background>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
